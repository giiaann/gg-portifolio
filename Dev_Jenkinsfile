pipeline {
    agent any // Use the default agent provided by Jenkins
    stages {
        stage('Initialization') {
            steps {
                script {
                    dir('/home/ubuntu/gg-project') {
                        // Initialize Git repository if not already done
                        if (!fileExists('.git')) {
                            sh 'git init'
                            sh 'git remote add origin git@github.com:giiaann/gg-portifolio.git'
                            echo 'Git repository initialized and remote set.'
                        } else {
                            echo 'Git repository already initialized.'
                        }
                        
                        // Fetch and checkout the 'develop' branch
                        sh 'git fetch '
			sh 'git branch'
			sh 'git status'
                        sh """
                            git checkout develop || git checkout -b develop origin/develop
                        """
                        
                        // Additional Git commands
                        sh 'git status'
                        sh 'git pull'
			sh 'git status'
                    }
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                // Add build steps here
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                // Add test steps here
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying..'
                // Add deploy steps here
            }
        }
    }
}
